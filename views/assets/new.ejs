<% include ../partials/header %>

    <div class="container">
        <div class="jumbotron">
        </div>
        <div class="row">
            <div class="col-md-3"></div>
            <div class="col-md-6">
                <form action="/assets" method="POST">
                    <div class="form-group">
                        <label>Asset Name</label>
                        <input type="text" class="form-control" id="name" name="name" placeholder="Enter Asset Name...">
                    </div>
                    <div class="form-group">
                        <label>Asset ID</label>
                        <input type="text" class="form-control" id="asset_id" name="asset_id" placeholder="Enter Asset ID...">
                    </div>
                    <div class="form-group">
                        <label>Asset Status</label>
                        <input type="text" class="form-control" id="status" name="status" placeholder="Enter Asset Status...">
                    </div>
                    <div class="form-group">
                        <label>Asset Description</label>
                        <textarea class="form-control" rows="3" cols="" id="description" name="description" placeholder="Enter Asset Description..."></textarea>
                    </div>
                    <button type="submit" class="btn btn-primary">Add Asset</button>
                    <a href="/assets" class="btn btn-warning"> Cancel</a>
                </form>
            </div>
            
            <div class="col-md-3"></div>
        </div>
        
    </div>

<% include ../partials/footer %>